.right_col
  .row
    .col-md-12
      .x_panel
        .x_title
          h2
            | Customer Information 
          .clearfix
        .x_content
          #wizard.form_wizard.wizard_horizontal
            ul.wizard_steps.anchor
              li
                a.selected href="#step-1" isdone="1" rel="1" 
                  span.step_no 1
                  span.step_descr
                    | Step 1
                    br
                    small Step 1 Personal Info
              li
                a.disabled href="#step-2" isdone="0" rel="2" 
                  span.step_no 2
                  span.step_descr
                    | Step 2
                    br
                    small Step 2 Family details
              li
                a.disabled href="#step-3" isdone="0" rel="3" 
                  span.step_no 3
                  span.step_descr
                    | Step 3
                    br
                    small Step 3 Tempoary Address
            .stepContainer
              = form_for @customer, url: customers_path  do |f|
                - @customer.build_personal_info
                - @customer.address.build
                = f.hidden_field :user_type, value: 'customer'
                = render partial: 'wizard_steps', locals: {f: f, customer: @customer}